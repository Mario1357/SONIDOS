<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mario.myapplication.MainActivity"
    android:background="#f37272">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sonido"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:background="@mipmap/bee" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sonido2"
        android:layout_alignTop="@+id/sonido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:background="@mipmap/bear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/perro"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/sonido"
        android:layout_alignLeft="@+id/sonido"
        android:layout_alignStart="@+id/sonido"
        android:background="@mipmap/dog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lobo"
        android:layout_alignTop="@+id/perro"
        android:layout_alignLeft="@+id/sonido2"
        android:layout_alignStart="@+id/sonido2"
        android:background="@mipmap/wolf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caballo"
        android:layout_below="@+id/perro"
        android:layout_alignLeft="@+id/perro"
        android:layout_alignStart="@+id/perro"
        android:layout_marginTop="69dp"
        android:background="@mipmap/horse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delfin"
        android:layout_alignTop="@+id/caballo"
        android:layout_alignLeft="@+id/lobo"
        android:layout_alignStart="@+id/lobo"
        android:background="@mipmap/dolphin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tigre"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/delfin"
        android:layout_toStartOf="@+id/delfin"
        android:background="@mipmap/tiger" />

</RelativeLayout>
